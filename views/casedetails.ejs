                        <a class="nav-link" href="/about" style="color: white;">About</a>
                    </li>
                        <li class="nav-item">
                        <a class="nav-link" href="/signout" style="color: white;">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>

    <% } %>
     
    <div class="caseDetials">
        <div class="heading">
            <h1 style="color: purple;">Title of the Case</h1>
        </div>
        <div style="background-color: white; padding:2%;  margin: 10px; margin-left: auto;margin-right: auto; border-radius: 10px;border: dashed purple; width: 80%; ">
            <label>CIN</label>
            <p><%= currCase.CIN %></p>
            <label>Case Title</label>
            <p><%= currCase.caseTitle %></p>
            <label>Defendant's Name</label>
            <p><%= currCase.defendantName %></p>
            <label>Defendant's Address</label>
            <p><%= currCase.defendantAddress %></p>
            <label>Crime Type</label>
            <p><%= currCase.crimeType %></p>
            <label>Committed date of case</label>
            <p><%= currCase.committedDate %></p>
            <label>Location of Committed Case</label>
            <p><%= currCase.committedLocation %></p>
            <label>Name of arresting officer</label>
            <p><%= currCase.arrestingOfficer %></p>
            <label>Name of Presiding Judge</label>
            <p><%= currCase.presidingJudge %></p>
            <label>Name of Public Prosecutor</label>
            <p><%= currCase.publicProsecutor %></p>
            <label>Assigned date of intial hearing</label>
            <p><%= currCase.dateOfHearing %></p>
        </div>

        <% for(let i=0;i<currCase.sessions.length;i++) { %>

            <div style="background-color: white; padding:2%;  margin: 10px; margin-left: auto;margin-right: auto; border-radius: 10px;border: dashed purple; width: 80%; ">
                <div class="heading">
                    <h1 style="color: purple;">Hearing of case <%= i+1 %> </h1>
                </div>
                
                <label>Attending Judge Name</label>
                <p><%= currCase.sessions[i].attendingJudge %></p>
                <label>Hearing Summary</label>
                <p><%= currCase.sessions[i].summary %></p>
                <label>Next Date of Hearing</label>
                <p><%= currCase.sessions[i].nextHearingDate %></p>
                <% if(currCase.closed==true && i==currCase.sessions.length-1) {%>
                <label>Case Closed</label>
                <% } %>
            </div>

        <% } %>

    </div>

    <% if(currCase.closed==false && isRegistrer==true) {  %>

        <div class="row" style="background-color: white; padding:2%; margin: 10px;margin-left: auto;margin-right: auto;  border-radius: 10px;border: dashed purple; width: 55%; " >
            <div class="form">
                <!-- <label>Date of Hearing</label> -->
                <br>
                <!-- <input type="date" name="hearingDate" id="date"> -->
                <form action="/case/<%= currCase.id %>/addSession" method="post">
                <label>Name of attending judge</label>
                <br>
                <input type="text" name="attendingJudge" id="text" placeholder="Attending Judge">
                <br>
                <label>Summary of the Hearing</label>
                <br>
                <textarea id="subject" name="summary" rows="3" cols="25" placeholder="Summary of the hearing"></textarea>
                <br>
                <label>Next date of Hearing</label>
                <br>
                <input type="date" name="nextHearingDate"  id="date">
                <br>
                
                    <div class="btns" style="display: flex; justify-content: space-between; margin: 10px;">
                        <button type="submit" id="btn" class="btn " style="background-image: linear-gradient(to right,#4E65FF,#92EFFD);color: white;" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            Add 
                          </button>
                    </div>       
                </form>       
                <form action="/case/<%= currCase.id %>/closeCase" method="POST">
                    <button type="submit" id="btn" class="btn " style="background-image: linear-gradient(to right,#4E65FF,#92EFFD);color: white;" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        Close the Case
                      </button>  
                </form>
            </div>    
            </div>

    <% } %>

