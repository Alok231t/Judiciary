    <% } %>


        <div class="bg">
        <span><i class="fa-solid fa-magnifying-glass"></i> <input placeholder="Search By CIN" id="searchByCIN" style="border:0;"> </span>
        </div>
        <div class="bg">
        <span><i class="fa-solid fa-magnifying-glass"></i> <input placeholder="Search By Keyword" id="searchByKeyword" style="border:0;"> </span>
        </div>  

            <div class="row" style="padding-left: 30px; padding-right:30px ; width: 70%; margin-left: auto; margin-right: auto;" > 
        </div>

    <div class="row" style="padding-left: 30px; padding-right:30px ; width: 70%; margin-left: auto; margin-right: auto;" >
        <table class="table">
            <thead>
              <tr>
                <th scope="col">CIN</th>
                <th scope="col">Case Status</th>
                <th scope="col">Title of the case</th>
                <th scope="col">Filing Date of case</th>
                <th scope="col">Details</th>
              </tr>
            </thead>
            <tbody>

                <% for(let i=0;i<cur.length;i++){ %>
                    <tr>
                        <th scope="row"> <%= cur[i].CIN %> </th>
                        <% if(cur[i].closed) { %>
                        <td> Past </td>
                        <% } %>
                        <% var today=new Date(); %>
                        <% if(cur[i].closed==false && cur[i].dateOfHearing.getDate()==(today).getDate() && cur[i].dateOfHearing.getMonth()==(today).getMonth() && cur[i].dateOfHearing.getYear()==(today).getYear()) { %>
                            <td> Active </td>
                        <% } %>
                        <% if(cur[i].closed==false && !(cur[i].dateOfHearing.getDate()==(today).getDate() && cur[i].dateOfHearing.getMonth()==(today).getMonth() && cur[i].dateOfHearing.getYear()==(today).getYear())) { %>
                            <td>Upcoming</td>
                        <% } %>
                        <td> <%= cur[i].caseTitle %> </td>
                        <td> <%= cur[i].committedDate %> </td>
                        <td><a href="/case/<%= cur[i].id %>" class="btn btn-primary">View More<i class="fa-solid fa-angles-right"></i></a>
                        </td>
                      </tr>
                <% } %>

            </tbody>
          </table>
      </div>
    
        
   


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
    
    <div class="modal fade" id="staticBackdrop1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel" style="font-family: 'Comic Sans MS', 'Comic Sans', cursive; color: purple;">Expenses</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-footer">
                    <div class="card">
                    <span>Amount Paid : <label>5000</label></span>
                    <br>
                    <span>Amount to be cleared : <label> <%= due %> </label></span>
                    <br>
                    <button type="submit" class="btn" style="background-image: linear-gradient(to right,#4E65FF,#92EFFD);color: white;" data-bs-dismiss="modal">Clear Expenses</button>
                    </div>
                </div>
            </div>
           
          </div>
        </div>
    </div> 
    
    <footer class="footer pb-3 w-100">
        <div class="container text-center">
